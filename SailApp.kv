##:kivy 2.0.0
#:import Button kivy.uix.button.Button
#:import GridLayout kivy.uix.gridlayout
#:import platform kivy.utils.platform
    

SM:
    MainMenuScreen:
    CameraScreen:
    FileChooserScreen:
    SplineScreen:


<CameraButton@Button>:
    color: 1, 1, 1, 1
    size_hint: 0.6, 0.3

<GalleryButton@Button>:
    color: 1, 1, 1, 1
    size_hint: 0.6, 0.15

<SmMenuButton@Button>:
    color: 1, 1, 1, 1
    size_hint: 0.275, 0.15

<SplineButton@Button>:
    size_hint: 0.2, 0.2

<ResultsCard>
    id: results_card
    rows: 3
    pos_hint: {"x":0, "y":0.5}
    size_hint: 0.3, 0.5
    canvas.before:
        Color:
            rgba: 1., 1., 1., 0.8
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 3
        Label:
            text: "TOP"
            color: 1., 0, 0
            bold: True
            underline: True
            outline_color: 0, 0, 0
            outline_width: 1
        GridLayout:
            cols: 2
            Label:
                text: "Thickness"
                color: 1., 0, 0
            Label:
                id: thickness_top_label
                color: 1., 0, 0
        GridLayout:
            cols: 2
            Label:
                text: "Camber"
                color: 1., 0, 0
            Label:
                id: camber_top_label
                color: 1., 0, 0
    GridLayout:
        rows: 3
        Label:
            text: "MID"
            color: 0, 1., 0
            bold: True
            underline: True
            outline_color: 0, 0, 0
            outline_width: 1
        GridLayout:
            cols: 2
            Label:
                text: "Thickness"
                color: 0, 1., 0
            Label:
                id: thickness_mid_label
                color: 0, 1., 0
        GridLayout:
            cols: 2
            Label:
                text: "Camber"
                color: 0, 1., 0
            Label:
                id: camber_mid_label
                color: 0, 1., 0
    GridLayout:
        rows: 3
        Label:
            text: "BTM"
            color: 0, 0, 1.
            bold: True
            underline: True
            outline_color: 0, 0, 0
            outline_width: 1
        GridLayout:
            cols: 2
            Label:
                text: "Thickness"
                color: 0, 0, 1.
            Label:
                id: thickness_btm_label
                color: 0, 0, 1.
        GridLayout:
            cols: 2
            Label:
                text: "Camber"
                color: 0, 0, 1.
            Label:
                id: camber_btm_label
                color: 0, 0, 1.
        

<MainMenuScreen>:
    name: "main_menu"
    FloatLayout:
        Label:
            id: "Title"
            text: "[b]Sail App[/b]"
            markup:True
            font_size: 30
            text_size: self.size
            halign: "center"
            valign: "middle"
            size_hint: 0.6, 0.2
            pos_hint: {"x": 0.2, "y": 0.8}

        CameraButton:
            text: "Camera"
            pos_hint: {"x": 0.2, "y": 0.5}
            on_release: 
                root.open_camera()

        GalleryButton: 
            text: "From Gallery"
            pos_hint: {"x": 0.2, "y": 0.3}
            on_release:
                root.manager.transition.direction = "left"
                app.root.current = "file_chooser"
            
        SmMenuButton:
            text: "Account"
            pos_hint: {"x": 0.2, "y": 0.1}
            
        SmMenuButton:
            text: "Settings"
            pos_hint: {"x": 0.525, "y": 0.1}


<CameraScreen>:
    # THIS IS ONLY USED IN DEV ENVIRONMENT
    name: "camera_screen"

    Camera:
        id:camera
        allow_stretch: True

    FloatLayout:
        Button:
            text: 'Capture'
            size_hint: 0.1, 0.1
            pos_hint: {"x": 0.45, "y": 0.1}
            height: '48dp'
            on_press: 
                root.capture()

        Button:
            text: 'Main Menu'
            text_size: self.size
            halign: "center"
            valign: "middle"
            on_release: 
                root.manager.transition.direction = "right"
                app.root.current = "main_menu"
            size_hint: 0.1, 0.1
            pos_hint: {"x": 0.8, "y": 0.8}
            height: '48dp'

<FileChooserScreen>:
    name: "file_chooser"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            rootpath: '/storage/emulated/0/' if platform == 'android' else '/'

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Cancel"
                on_release: 
                    root.manager.transition.direction = "right"
                    app.root.current = "main_menu"

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SplineScreen>:
    name: "spline_screen"
    BoxLayout:
        id: scatter_container
        orientation: "vertical"
        MainScatter:
            id: scatter
            do_rotation: False
            # do_translation: False
            size: root.size
            size_hint: None, None
            auto_bring_to_front: False
            scale_min: 1
            scale_max: 3
            # do_collide_after_children: True
            Image:
                id: scatter_image
                source: root.img_src
                size: root.size

    FloatLayout:
        id: spline_screen_util_btns

        SplineButton:
            text: "Main Menu"
            pos_hint: {"x": 0.8, "y": 0.8}
            on_release: 
                root.manager.transition.direction = "right"
                app.root.current = "main_menu"

        SplineButton:
            name: "top"
            text: "TOP"
            pos_hint: {"x": 0, "y": 0}
            on_release: scatter.add_chord(self.name)

        SplineButton:
            name: "mid"
            text: "MID"
            pos_hint: {"x": 0.25, "y": 0}
            on_release: scatter.add_chord(self.name)

        SplineButton:
            name: "btm"
            text: "BTM"
            pos_hint: {"x": 0.5, "y": 0}
            on_release: scatter.add_chord(self.name)

        SplineButton:
            name: "run"
            text: "RUN"
            pos_hint: {"x": 0.8, "y": 0}
            on_release: root.show_results()