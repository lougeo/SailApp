#:kivy 2.0.0
#:import Button kivy.uix.button.Button
#:import GridLayout kivy.uix.gridlayout
#:import platform kivy.utils.platform
    

SM:
    MainMenuScreen:
    CameraScreen:
    FileChooserScreen:
    SplineScreen:

<SmMenuButton@Button>:
    color: 1, 1, 1, 1
    size_hint: 0.275, 0.15

<ResultsCard>
    id: results_card
    rows: 3
    pos_hint: {"x":0.6, "y":0.5}
    size_hint: 0.4, 0.5
    canvas.before:
        Color:
            rgba: 1., 1., 1., 0.8
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 3
        Label:
            text: "TOP"
            color: 0.86, 0.15, 0.5
            bold: True
            underline: True
            outline_color: 0, 0, 0
            outline_width: 1
        GridLayout:
            cols: 2
            Label:
                text: " Thickness"
                color: 0.86, 0.15, 0.5
                # size_hint: (None, None)
                # size: self.texture_size
            Label:
                id: thickness_top_label
                color: 0.86, 0.15, 0.5
        GridLayout:
            cols: 2
            Label:
                text: " Camber"
                color: 0.86, 0.15, 0.5
                # size_hint: (None, None)
                # size: self.texture_size
            Label:
                id: camber_top_label
                color: 0.86, 0.15, 0.5
    GridLayout:
        rows: 3
        Label:
            text: "MIDDLE"
            color: 1.0, 0.38, 0
            bold: True
            underline: True
            outline_color: 0, 0, 0
            outline_width: 1
        GridLayout:
            cols: 2
            Label:
                text: "Thickness"
                color: 1.0, 0.38, 0
            Label:
                id: thickness_mid_label
                color: 1.0, 0.38, 0
        GridLayout:
            cols: 2
            Label:
                text: "Camber"
                color: 1.0, 0.38, 0
            Label:
                id: camber_mid_label
                color: 1.0, 0.38, 0
    GridLayout:
        rows: 3
        Label:
            text: "BOTTOM"
            color:1.0, 0.69, 0
            bold: True
            underline: True
            outline_color: 0, 0, 0
            outline_width: 1
        GridLayout:
            cols: 2
            Label:
                text: "Thickness"
                color: 1.0, 0.69, 0
            Label:
                id: thickness_btm_label
                color: 1.0, 0.69, 0
        GridLayout:
            cols: 2
            Label:
                text: "Camber"
                color: 1.0, 0.69, 0
            Label:
                id: camber_btm_label
                color: 1.0, 0.69, 0
        

<MainMenuScreen>:
    name: "main_menu"
    FloatLayout:
        MDLabel:
            id: "Title"
            text: "[b]Sail Shape[/b]"
            font_style: "H3"
            color: 0, 0, 0
            markup:True
            # font_size: 30
            text_size: self.size
            halign: "center"
            valign: "middle"
            size_hint: 0.6, 0.3
            pos_hint: {"x": 0.2, "y": 0.7}

        MDIconButton:
            icon: "camera"
            user_font_size: "84sp"
            size_hint: 0.6, 0.3
            pos_hint: {"x": 0.2, "y": 0.4}
            on_release: 
                root.open_camera()
            # MDIcon:
            #     pos_hint: {"center_x": 0.5, "center_y": 0.5}
            #     icon: "camera"
            #     halign: "center"

            # MDLabel:
            #     text: "Camera"
            #     halign: "center"
            # theme_text_color: "Custom"
            # text_color: 1, 0, 0, 1
            # line_color: 0, 0, 1, 1
            # icon_color: 1, 0, 0, 1
            # theme_text_color: 1, 1, 1, 1
            # font_size: "64sp"


        MDIconButton: 
            icon: "folder-multiple-image"
            user_font_size: "54sp"
            size_hint: 0.6, 0.3
            pos_hint: {"x": 0.2, "y": 0.1}
            on_release:
                root.manager.transition.direction = "left"
                app.root.current = "file_chooser"
            
        # SmMenuButton:
        #     text: "Account"
        #     pos_hint: {"x": 0.2, "y": 0.1}
            
        # SmMenuButton:
        #     text: "Settings"
        #     pos_hint: {"x": 0.525, "y": 0.1}


<CameraScreen>:
    # THIS IS ONLY USED IN DEV ENVIRONMENT
    name: "camera_screen"

    Camera:
        id:camera
        allow_stretch: True

    FloatLayout:
        MDFloatingActionButton:
            # text: 'Capture'
            icon: "camera-iris"
            size_hint: 0.1, 0.1
            pos_hint: {"x": 0.45, "y": 0.1}
            # height: '48dp'
            on_press: 
                root.capture()

        Button:
            text: 'Main Menu'
            text_size: self.size
            halign: "center"
            valign: "middle"
            on_release: 
                root.manager.transition.direction = "right"
                app.root.current = "main_menu"
            size_hint: 0.1, 0.1
            pos_hint: {"x": 0.8, "y": 0.8}
            height: '48dp'

<FileChooserScreen>:
    name: "file_chooser"
    BoxLayout:
        # size: root.size
        # pos: root.pos
        canvas.before:
            Color:
                rgb: 0,0,0
            Rectangle:
                size: root.size
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            color: 0,0,0,1
            rootpath: root.get_rootpath()#'/storage/emulated/0/' if platform == 'android' else '/'

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Cancel"
                on_release: 
                    root.manager.transition.direction = "right"
                    app.root.current = "main_menu"

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SplineScreen>:
    name: "spline_screen"
    BoxLayout:
        id: scatter_container
        orientation: "vertical"
        MainScatter:
            id: scatter
            do_rotation: False
            # do_translation: False
            size: root.size
            size_hint: None, None
            auto_bring_to_front: False
            scale_min: 1
            scale_max: 3
            # do_collide_after_children: True
            Image:
                id: scatter_image
                source: root.img_src
                size: root.size

    FloatLayout:
        id: spline_screen_util_btns

        MDFillRoundFlatButton:
            # text: "Main Menu"
            # text_color: 0, 0, 0, 1
            md_bg_color: 1, 1, 1, 1
            size_hint: 0.2, 0.2
            pos_hint: {"x": 0, "y": 0.8}
            on_release: 
                root.manager.transition.direction = "right"
                app.root.current = "main_menu"
            MDIcon:
                icon: "keyboard-return"
                halign: "center"
                font_size: "50sp"


        MDFillRoundFlatButton:
            name: "top"
            text: "T"
            font_size: "20sp"
            md_bg_color: 0.86, 0.15, 0.5, 1.
            # text_size: self.size
            size_hint: 0.2, 0.2
            pos_hint: {"x": 0, "y": 0}
            on_release: scatter.add_chord(self.name)

        MDFillRoundFlatButton:
            name: "mid"
            text: "M"
            font_size: "20sp"
            md_bg_color: 1., 0.38, 0, 1.
            size_hint: 0.2, 0.2
            pos_hint: {"x": 0.25, "y": 0}
            on_release: scatter.add_chord(self.name)

        MDFillRoundFlatButton:
            name: "btm"
            text: "B"
            font_size: "20sp"
            md_bg_color: 1., 0.69, 0, 1.
            size_hint: 0.2, 0.2
            pos_hint: {"x": 0.5, "y": 0}
            on_release: scatter.add_chord(self.name)

        MDFillRoundFlatButton:
            name: "run"
            # text: "RUN"
            # text_color: 0, 0, 0, 1
            md_bg_color: 1, 1, 1, 1
            size_hint: 0.2, 0.2
            pos_hint: {"x": 0.8, "y": 0}
            on_release: root.show_results()
            MDIcon:
                icon: "flare"
                halign: "center"
                font_size: "50sp"